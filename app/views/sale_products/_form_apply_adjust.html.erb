<%= form_with url: '', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10' do |form| %>

  <div class="form-group row">
    <%= form.number_field :adjust, class: 'form-control col-6', placeholder: 'Ingrese el ajuste a aplicar' %>
  </div>

  <div class="form-group row">
    <label class="form-check-inline u-check g-pl-25">
      <%= form.check_box :one_fee, class: 'g-hidden-xs-up g-pos-abs g-top-0 g-left-0' %>
      <div class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
        <i class="fa" data-check-icon="&#xf00c"></i>
      </div>
      Aplicar a una sola cuota
    </label>
  </div>

  <div class="field">
    <%= form.label :fee_number %>
    <div class="form-group col-8 col-ls-6">
      <%= form.select(:fee_number, @fees.collect {|fee| [fee.number, fee.number]}, 
                      {:include_blank => "Seleccione numero de cuota"},
                      class: 'select-2-fees-number') %>
      <div class="invalid-feedback fee_number"></div>
    </div>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
