<%= form_with(model: @user, id: 'form-user', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-15 g-mb-15') do |form| %>

  <div class="form-group">
    <%= form.label :username, 'Nombre de usuario:' ,class: 'col-3' %>
    <%= form.text_field :username, class: 'form-control form-control-md rounded-0'%>
    <div class="invalid-feedback user_username"></div>
  </div>

    <div class="form-group">
    <%= form.label :name, 'Nombre:' ,class: 'col-3' %>
    <%= form.text_field :name, class: 'form-control form-control-md rounded-0'%>
    <div class="invalid-feedback user_name"></div>
  </div>


  <div class="form-group">
    <%= form.label :email, 'Email:' ,class: 'col-3' %>
    <%= form.text_field :email, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback client_email"></div>
  </div>

  <div class="form-group">
    <%= form.label :password , class: 'col-3'%>
    <%= form.password_field :password, class: 'form-control form-control-md rounded-0' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: 'col-3'  %>
    <%= form.password_field :password_confirmation, class: 'form-control form-control-md rounded-0' %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
