<h1><i class="hs-admin-stamp"></i> Condominios</h1>
<%= link_to '<i class="hs-admin-back-left"></i>Volver a manzanas'.html_safe, 
    apples_path, 
    class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2' %>
<%= link_to '<i class="fa fa-plus"></i> Registrar condominio'.html_safe, 
    new_condominium_path, 
    { :remote => true, 'data-toggle' =>  "modal", 
     'data-target' => '#modal-condominium', 
     'class' => 'btn u-btn-teal justify-content-end mb-2 ml-4'} %>
<table id="condominia-table" class="table hover dt-responsive w-100">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>


<!-- Modal alta de condominium -->
<div class="modal fade" id="modal-condominium" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
</div>
<!-- End modal -->


<!-- Modal para eliminar condominium -->
<div class="modal fade" id="modal-disable-condominium" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">¿ Esta seguro de dar de baja al proveedor ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: condominia_disable_path, id: 'form-disable-condominium') %>
          <input type="hidden" id="condominium_id" name="condominium[id]" value="">
          <button type="submit" class="btn u-btn-red g-mr-10">Eliminar</button>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar condominium -->