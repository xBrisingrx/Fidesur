<%= form_with(model: @apple, id: 'form-apple' ,class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30') do |form| %>
  <div class="form-group">
    <%= form.label :code, 'Denominacion (*):' ,class: 'col-3' %>
    <%= form.text_field :code, class: 'form-control form-control-md rounded-0', required: true %>
    <div class="invalid-feedback apple_code"></div>
  </div>

  <div class="form-group">
    <%= form.label :hectares, 'NÂ° hectareas:' ,class: 'col-3' %>
    <%= form.number_field :hectares, class: 'form-control form-control-md rounded-0', step:'0.001' %>
    <div class="invalid-feedback apple_hectares"></div>
  </div>

  <div class="form-group">
    <%= form.label :location, 'Ubicacion:' ,class: 'col-3' %>
    <%= form.text_field :location, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback apple_location"></div>
  </div>

  <div class="form-group">
    <%= form.label :value, 'Valor ($):' ,class: 'col-3' %>
    <%= form.number_field :value, class: 'form-control form-control-md rounded-0', step:'0.001' %>
    <div class="invalid-feedback apple_value"></div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 col-form-label">
      <%= form.label :sector_id, 'Sector (*)' %>
    </div>
    <div class="col-8 col-sm col-lg-9">
      <select id="apple_sector_id" name="apple[sector_id]" class='form-control select-2-apple' required>
        <% @sectors.each do |sector| %>
          <option value="<%= sector.id %>" > <%= sector.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>