<%= form_with(model: @provider, id: 'form-provider', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30') do |form| %>

  <div class="form-group row">
    <div class="col-3">
      <%= form.label :name, 'Nombre (*):'%>
    </div>
    <div class="col-6">
      <%= form.text_field :name, class: 'form-control form-control-sm rounded-0', required: true %>
      <div class="invalid-feedback sector_name"></div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= form.label :cuit, 'CUIT:'%>
    </div>
    <div class="col-6">
      <%= form.text_field :cuit, class: 'form-control form-control-sm rounded-0' %>
      <div class="invalid-feedback sector_name"></div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= form.label :activity, 'Actividad:'%>
    </div>
    <div class="col-6">
      <%= form.text_field :activity, class: 'form-control form-control-sm rounded-0' %>
      <div class="invalid-feedback sector_name"></div>
    </div>
  </div>

  <div class="field">
    <%= form.text_area :description, 
        placeholder: "DescripciÃ³n",
        class: "form-control form-control-md u-textarea-expandable g-brd-gray-light-v7 g-brd-gray-light-v3--focus rounded-0 g-resize-none g-overflow-hidden" %>
  </div>

  <div class="mt-4">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
