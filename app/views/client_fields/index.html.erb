<p id="notice"><%= notice %></p>

<h1>Client Fields</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Field</th>
      <th>Detail</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_fields.each do |client_field| %>
      <tr>
        <td><%= client_field.client %></td>
        <td><%= client_field.field %></td>
        <td><%= client_field.detail %></td>
        <td><%= client_field.active %></td>
        <td><%= link_to 'Show', client_field %></td>
        <td><%= link_to 'Edit', edit_client_field_path(client_field) %></td>
        <td><%= link_to 'Destroy', client_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

