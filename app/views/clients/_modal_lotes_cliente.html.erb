<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <table id="clients_table" class="table hover dt-responsive w-100">
        <thead>
          <tr>
            <th>Manzana</th>
            <th>Lote</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @compras.each do |compra|%>
            <% compra.sale.field_sales.each do |lote|%>
              <tr>
                <td> <%= lote.field.apple.code %> </td>
                <td> <%= lote.field.code %> </td>
                <td> <%= link_to '<i class="icon-real-estate-044 u-line-icon-pro"></i>'.html_safe, show_field_sale_path( lote.field.id ) ,
                          class: 'u-link-v5 g-color-gray-light-v6 g-color-secondary--hover g-text-underline--none--hover g-ml-12', title: 'Ir a detalle de venta'  %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>