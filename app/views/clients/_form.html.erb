<%= form_with(model: @client, id: 'form-client', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-15 g-mb-15') do |form| %>
  <div id="error_explanation" class="alert alert-danger" style="display:none">
    <ul id="error_list"></ul>
  </div>

  <div class="form-group">
    <%= form.label :code, 'Legajo:' ,class: 'col-3' %>
    <%= form.text_field :code, class: 'form-control form-control-md rounded-0'%>
    <div class="invalid-feedback client_code"></div>
  </div>

  <div class="form-group">
    <%= form.label :name, 'Nombre (*):' ,class: 'col-3' %>
    <%= form.text_field :name, class: 'form-control form-control-md rounded-0', required: true %>
    <div class="invalid-feedback client_name"></div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, 'Apellido (*):' ,class: 'col-3' %>
    <%= form.text_field :last_name, class: 'form-control form-control-md rounded-0', required: true %>
    <div class="invalid-feedback client_last_name"></div>
  </div>

  <div class="form-group">
    <%= form.label :dni, 'DNI:' ,class: 'col-3' %>
    <%= form.number_field :dni, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback client_dni"></div>
  </div>

  <div class="form-group">
    <%= form.label :marital_status, 'Estado civil' %>
    <div class="form-group col-8 col-ls-6">
      <select name="client[marital_status]" id="client_marital_status" class="select2-client-marital-status">
        <% @marital_status.each do |status| %>
          <% if status == @client.marital_status %>
            <option value="<%= status %>" selected> <%= status  %> </option>
          <% else %>
            <option value="<%= status %>"> <%= status  %> </option>
          <% end %>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :direction, 'Direccion:' ,class: 'col-3' %>
    <%= form.text_field :direction, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback client_direction"></div>
  </div>


  <div class="form-group">
    <%= form.label :email, 'Email:' ,class: 'col-3' %>
    <%= form.text_field :email, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback client_email"></div>
  </div>

  <div class="form-group">
    <%= form.label :phone, 'TelÃ©fono:' ,class: 'col-3' %>
    <%= form.text_field :phone, class: 'form-control form-control-md rounded-0' %>
    <div class="invalid-feedback client_phone"></div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>
