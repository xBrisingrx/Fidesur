<h1> Detalle de venta del lote <%= @field_sale.field.code %> </h1>

<%= link_to '<i class= "hs-admin-back-left"></i> Volver a manzanas'.html_safe, apples_path, class: 'btn u-btn-blue mb-2 mr-2'%>
<%= link_to '<i class= "hs-admin-back-left"></i> Volver a lotes'.html_safe, apple_fields_path(@field_sale.field.apple), class: 'btn u-btn-primary mb-2 mr-2'%>

<input type="hidden" id="field_sale_id" value="<%= @id %>">
<div class="row mb-2">
<!-- Panel -->
  <div class="card h-100 g-brd-gray-light-v7 g-rounded-3 ml-2">
    <div class="card-block g-font-weight-300 g-pa-20">
      <div class="media">
        <div class="d-flex g-mr-15">
          <div class="u-header-dropdown-icon-v1 g-pos-rel g-width-60 g-height-60 g-bg-lightblue-v3 g-font-size-18 g-font-size-24--md g-color-white rounded-circle">
            <i class="hs-admin-money g-absolute-centered"></i>
          </div>
        </div>

        <div class="media-body align-self-center">
          <div class="d-flex align-items-center g-mb-5">
            <span class="g-font-size-24 g-line-height-1 g-color-black"> $<%= @sale.paid%> </span>
            <span class="d-flex align-self-center g-font-size-0 g-ml-5 g-ml-10--md">
        </span>
          </div>

          <h6 class="g-font-size-16 g-font-weight-300 g-color-gray-dark-v6 mb-0">Primer entrega</h6>
        </div>
      </div>
    </div>
  </div>
  <div class="card h-100 g-brd-gray-light-v7 g-rounded-3 ml-2">
    <div class="card-block g-font-weight-300 g-pa-20">
      <div class="media">
        <div class="d-flex g-mr-15">
          <div class="u-header-dropdown-icon-v1 g-pos-rel g-width-60 g-height-60 g-bg-teal-v2 g-font-size-18 g-font-size-24--md g-color-white rounded-circle">
            <i class="hs-admin-money g-absolute-centered"></i>
          </div>
        </div>

        <div class="media-body align-self-center">
          <div class="d-flex align-items-center g-mb-5">
            <span class="g-font-size-24 g-line-height-1 g-color-black" id="monto_pagado"> $<%= @total_pagado%> </span>
            <span class="d-flex align-self-center g-font-size-0 g-ml-5 g-ml-10--md">
        </span>
          </div>

          <h6 class="g-font-size-16 g-font-weight-300 g-color-gray-dark-v6 mb-0">Pagado</h6>
        </div>
      </div>
    </div>
  </div>
  <div class="card h-100 g-brd-gray-light-v7 g-rounded-3 ml-2">
    <div class="card-block g-font-weight-300 g-pa-20">
      <div class="media">
        <div class="d-flex g-mr-15">
          <div class="u-header-dropdown-icon-v1 g-pos-rel g-width-60 g-height-60 g-bg-lightred-v2 g-font-size-18 g-font-size-24--md g-color-white rounded-circle">
            <i class="hs-admin-money g-absolute-centered"></i>
          </div>
        </div>

        <div class="media-body align-self-center">
          <div class="d-flex align-items-center g-mb-5">
            <span class="g-font-size-24 g-line-height-1 g-color-black" id="monto_adeudado"> <%= @total_adeudado%> </span>
            <span class="d-flex align-self-center g-font-size-0 g-ml-5 g-ml-10--md">
        </span>
          </div>

          <h6 class="g-font-size-16 g-font-weight-300 g-color-gray-dark-v6 mb-0">Adeuda</h6>
        </div>
      </div>
    </div>
  </div>
  <!-- End Panel -->
</div>   

<div class="row ml-2">
  A nombre de: 
  <ul>
    <% @sale.clients.each do |client| %>
      <li> <%= client.fullname %> </li>
    <% end %>
  </ul>
</div>

<div class="row ml-2" id="cant_cuotas_pagadas">
  Cuotas pagadas: <%= "#{@cuotas_pagadas}/#{@total_cuotas}" %>
</div>
<div class="row ml-2 mb-4">
  Cuotas vencidas: <%= @cant_vencidas %>
</div>

<table id="field_sale_table" class="table hover dt-responsive w-100">
  <thead>
    <tr>
      <th>#</th>
      <th>Valor</th>
      <th>Fecha vencimiento</th>
      <th id="total_debe"> Debe <b>($<%= @land_fees.sum(:owes) %>)</b></th>
      <th id="total_haber"> Haber <b>($<%= @land_fees.sum(:payment) %>)</b></th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>


<!-- Modal pagar cuota -->
<div class="modal fade" id="modal-field-sale" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
</div>
<!-- End modal -->