<h1> Lotes vendidos </h1>

<table class="table hover dt-responsive w-100" id="all_fields">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Manzana</th>
          <th>Lote</th>
        </tr>
      </thead>
      <tbody>
        <% @fields.each do |field|%>
          <tr>
            <td>
              <ul>
                <% field.sale.clients.each do |client| %>
                  <li><%= "#{client.fullname} - #{client.dni}" %></li>
                <% end %>
              </ul>
            </td>
            <td><%= field.sale.fields.first.apple.code %></td>
            <td><%= field.sale.fields.first.code %> <%= link_to '<i class="icon-real-estate-044 u-line-icon-pro"></i>'.html_safe, show_field_sale_path( field.field_id ) ,
                          class: 'u-link-v5 g-color-gray-light-v10 g-color-secondary--hover g-text-underline--none--hover g-ml-12', title: 'Ir a detalle de venta'  %></td>
          </tr>
        <%end%>
      </tbody>  
    </table>