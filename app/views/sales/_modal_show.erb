<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
    	<div class="row">
    		<div class="col-6">
    			<b>Lote comprado por: </b>
    		</div>
    		<div class="col-6">
    			<ul>
						<% @sale.client_sales.each do |c| %>
							<li><%= c.client.name %></li>
						<% end %>
					</ul>
    		</div>
    	</div>
    	<hr>
      <div class="row">
      	<div class="col-6"><b>Pago inicial: </b></div>
      	<div class="col-6"> $ <%= @sale.paid %> </div>
      </div>
      <div class="row">
      	<div class="col-6"><b>Cuotas pagadas: </b></div>
      	<div class="col-6"><%= "#{@sale.batch_payments.where(payed: true).count}/#{@sale.number_of_payments}" %></div>
      </div>
    </div>
  </div>
</div>